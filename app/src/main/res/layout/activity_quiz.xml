<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/toolbar_layout"/>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view1"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cbfc9a"
        android:visibility="visible"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/ol1"
            android:visibility="visible"
            android:layout_margin="30dp">


            <TextView

                android:fontFamily="@font/font1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="Opinion Poll"/>
            <TextView

                android:layout_marginTop="10dp"
                android:fontFamily="@font/font1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/question"
                android:textStyle="bold"
           >

            </TextView>
            <RadioGroup
                android:layout_marginTop="15dp"
                android:id="@+id/mehhirerg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton

                    android:textSize="18dp"
                    android:fontFamily="@font/font1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="#000"
                    android:clickable="true"
                    android:id="@+id/optionone"
                    android:paddingLeft="15dp"
                    android:textColor="#000" />
                <RadioButton

                    android:textSize="18dp"
                    android:fontFamily="@font/font1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="#000"
                    android:clickable="true"
                    android:id="@+id/optiontwo"
                    android:paddingLeft="15dp"
                    android:textColor="#000" />
                <RadioButton

                    android:textSize="18dp"
                    android:fontFamily="@font/font1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="#000"
                    android:clickable="true"
                    android:id="@+id/optionthree"
                    android:paddingLeft="15dp"
                    android:textColor="#000" />
                <RadioButton

                    android:textSize="18dp"
                    android:fontFamily="@font/font1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="#000"
                    android:clickable="true"

                    android:id="@+id/optionfour"
                    android:paddingLeft="15dp"
                    android:textColor="#000" />
             <!--   <RadioButton

                    android:textSize="18dp"
                    android:fontFamily="@font/font1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="#000"
                    android:clickable="true"
                    android:id="@+id/optionfive"
                    android:paddingLeft="15dp"
                    android:textColor="#000" />-->
            </RadioGroup>
            <!--<EditText-->
            <!--android:layout_marginTop="15dp"-->
            <!--android:fontFamily="@font/font1"-->
            <!--android:focusable="false"-->
            <!--android:id="@+id/carpenter"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_margin="10dp"-->
            <!--android:layout_marginLeft="30dp"-->
            <!--android:background="@drawable/textshape"-->
            <!--android:gravity="start"-->
            <!--android:hint="Write your review here....."-->
            <!--android:padding="10dp"-->
            <!--android:textColorHint="#000"-->
            <!--android:textSize="20dp" />-->
            <Button
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/loginone"
                android:fontFamily="@font/font1"
                android:text=" Submit"
                android:onClick="clickdata"
                android:id="@+id/optionsubmit"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ol2"
            android:visibility="gone"

            android:orientation="vertical">
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:src="@drawable/coming_soon"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>